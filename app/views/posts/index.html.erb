<h1>Posts</h1>
<% @posts.each do |post| %>
  <div>
    <h2><%= link_to post.title, post %></h2>
    <p><%= truncate(post.comments.first.body, length: 200) if post.comments.any? %></p>
    <small>Por <%= post.user.email %></small>
  </div>
<% end %>

<%= paginate @posts %>

<%= link_to 'Novo Post', new_post_path if user_signed_in? %>