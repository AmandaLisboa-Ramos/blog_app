<% content_for :title, "Editing post" %>

<div class="container d-flex justify-content-center">
  <div class="col-md-8">
    <h1 class="mb-4">Editing Post</h1>

    <%= render "form", post: @post %>

    <div class="mt-4">
      <%= link_to "Show this post", @post, class: "btn btn-secondary me-2" %>
      <%= link_to "Back to posts", posts_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
