<% content_for :title, "Editing post" %>

<div class="container d-flex justify-content-center">
  <div class="col-md-8">
    <h1 class="mb-4">Editing Post</h1>

    <%= render "form", post: @post %>

    <div class="mt-4 d-flex gap-3">
      <%= link_to "Voltar", @post, class: "btn btn-secondary me-2" %>
      <%= button_to "Excluir", @post, method: :delete, class: 'me-2 btn btn-danger' %>
    </div>
  </div>
</div>
