<% content_for :title, "Editing post tag" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      
      <h1 class="text-center mb-4">Editing post tag</h1>

      
      <div class="card shadow p-4 mb-4">
      <%= render "form", post_tag: @post_tag, class: "form-control form-control-lg" %></div>
    
      
      <div class="text-center mt-4">
        <%= link_to "Show this post tag", @post_tag, class: "btn btn-info btn-lg mx-2" %>
        <%= link_to "Back to post tags", post_tags_path, class: "btn btn-secondary btn-lg mx-2" %>
      </div>
    </div>
  </div>
</div>
