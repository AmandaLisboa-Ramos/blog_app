<p style="color: green"><%= notice %></p>

<% content_for :title, "Post tags" %>

<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center mb-4">Post tags</h1>

      <div id="post_tags" class="row justify-content-center">
      
        <% @post_tags.each do |post_tag| %>
          <div class="col-md-8 mb-3">
            <div class="card shadow p-3">
              <div class="card-body">
                <%= render post_tag %>
                <p class="text-center">
                  <%= link_to "Show this post tag", post_tag, class: "btn btn-success btn-lg" %>
                </p>

                <div class="text-center mt-4">
                  <%= link_to "New post tag", new_post_tag_path, class: "btn btn-primary btn-lg" %>
                </div>


              </div>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
