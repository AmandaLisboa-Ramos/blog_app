<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name),class: "btn btn-primary w-100 mb-3" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('devise.shared.createAccount'), new_registration_path(resource_name), class: "btn btn-primary w-100 mb-3" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('devise.shared.forgotPassword'), new_password_path(resource_name), class: "btn btn-secondary w-100 mb-3" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('devise.shared.confirmationInstructions'), new_confirmation_path(resource_name), class: "btn btn-link w-100 mb-3" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.shared.unlockInstructions'), new_unlock_path(resource_name), class: "btn btn-link w-100 mb-3" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-outline-primary w-100 mb-3", data: { turbo: false } %><br />
  <% end %>
<% end %>
